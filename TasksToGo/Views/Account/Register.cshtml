@model RegisterViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" />
}

<div class="register-wrapper">
    <div class="register-glass">

        <h2 class="title">Create Account</h2>
        <p class="subtitle">Join us and start your journey</p>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="input-box">
                <input asp-for="FirstName" required />
                <label asp-for="FirstName">First Name</label>
            </div>

            <div class="input-box">
                <input asp-for="LastName" required />
                <label asp-for="LastName">Last Name</label>
            </div>

            <div class="input-box">
                <input asp-for="Email" type="email" required />
                <label asp-for="Email">Email Address</label>
            </div>

            <div class="input-box">
                <input asp-for="Password" type="password" required />
                <label asp-for="Password">Password</label>
            </div>

            <div class="input-box">
                <input asp-for="ConfirmPassword" type="password" required />
                <label asp-for="ConfirmPassword">Confirm Password</label>
            </div>

            <button type="submit" class="register-btn">Create Account</button>
        </form>

    </div>
</div>

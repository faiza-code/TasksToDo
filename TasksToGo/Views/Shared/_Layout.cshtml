@*
  Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TaskToDo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    @RenderSection("Styles", required: false)
    @* If you need per-view CSS, add extra links in views or use section *@
</head>
<body>
    <header class="nav">
        <div class="nav-left">
            <div class="logo-box">
                <img src="~/imgs/programming2.png" alt="Filmix Logo" style="width:100%; height:100%;">
            </div>
            <span class="logo-text">TaskToDo</span>
            <a asp-controller="Home" asp-action="Index">Create Task</a>
            <a asp-controller="Category" asp-action="Index">Show All Categories</a>
        </div>
        <div class="nav-right">
            <form asp-controller="Home" asp-action="Index" method="get" style="display:inline;">
                <input type="text" name="q" placeholder="Search for tha task ...">
                <button class="btn" type="submit">Search</button>
            </form>
          
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TasksToGo - Developer by : Faiza Alhandali
        </div>
    </footer>
   

</body>
</html>


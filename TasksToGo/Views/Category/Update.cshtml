@model TaskCategory
@section Styles {
    <link rel="stylesheet" href="~/css/Category.css" />
}

<div class="edit-form-wrapper">
    <div class="edit-card">
        <div class="card-header">
            <h2>✏️ Edit Category</h2>
            <div class="header-actions">
                <a asp-controller="Category" asp-action="Index" class="btn-secondary">← Back</a>
                <a asp-controller="Category" asp-action="Detail" asp-route-Id="@Model.Id" class="btn-outline">👁️ View</a>
            </div>
        </div>

        <div asp-validation-summary="All" class="error-summary"></div>

        <form method="post" asp-controller="Category" asp-action="Update">
            <input type="hidden" asp-for="Id" />

            <div class="input-group">
                <input asp-for="Name" class="modern-input" placeholder="Enter category name" />
                <label asp-for="Name" class="input-label">Category Name</label>
                <span asp-validation-for="Name" class="error-text"></span>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn-primary">💾 Update Category</button>
            </div>
        </form>
    </div>
</div>

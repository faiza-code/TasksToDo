@{
    ViewData["Title"] = "Home Page";
}
@model List<TodoTask>
@section Styles {
    <link rel="stylesheet" href="~/css/Home.css" />
}


<div class="tasks-wrapper">
    <div class="tasks-header">
        <h1>📋 My Tasks</h1>
        <a asp-action="Create" asp-controller="Home" class="btn-primary">➕ New Task</a>
    </div>

    @if (Model.Count > 0)
    {
        <div class="tasks-grid">
            @foreach (var item in Model)
            {
                <div class="task-card">
                    <div class="task-header">
                        <span class="task-title">@item.Name</span>
                        <div class="task-actions">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn-detail">👁️</a>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn-edit">✏️</a>
                            <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id" class="btn-delete">🗑️</a>
                        </div>
                    </div>

                    <div class="task-details">
                        <div class="detail-row">
                            <span class="detail-label">Deadline</span>
                            <span class="detail-value">@item.Deadline.ToString("MMM dd, yyyy")</span>
                        </div>
                        @if (item.taskCategory != null)
                        {
                            <div class="detail-row">
                                <span class="detail-label">Category</span>
                                <span class="category-badge">@item.taskCategory.Name</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-tasks-card">
            <div style="font-size: 5rem; margin-bottom: 1.5rem;">📭</div>
            <h2>No Tasks Yet</h2>
            <p>Get started by creating your first task!</p>
            <a asp-action="Create" asp-controller="Home" class="btn-primary">🚀 Create First Task</a>
        </div>
    }
</div>
